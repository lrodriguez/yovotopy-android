<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="py.com.purplemammoth.apps.yoelijopy">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".YoElijoPyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainTabActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.ConsultaPadronActivity"
            android:label="@string/title_activity_consulta_padron"
            android:parentActivityName=".ui.MainTabActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="py.com.purplemammoth.apps.yoelijopy.ui.MainTabActivity" />
        </activity>
    </application>

</manifest>
