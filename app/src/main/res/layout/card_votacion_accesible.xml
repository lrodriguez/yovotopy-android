<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/votacion_accesible_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="@style/Widget.CardTitle.WithActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/Widget.CardTitleText.Big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voto Accesible" />
        </LinearLayout>

        <LinearLayout
            style="@style/Widget.CardContent.WithActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:minHeight="48dp"
                    android:overScrollMode="ifContentScrolls">

                    <TextView
                        style="@style/Widget.CardSupportingText.Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Tipo:" />

                    <TextView
                        android:id="@+id/voto_accesible_text"
                        style="@style/Widget.CardSupportingText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/default_padding"
                        android:paddingRight="@dimen/default_padding"
                        android:text="Voto en casa" />
                </TableRow>
            </TableLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>