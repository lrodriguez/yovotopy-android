<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="py.com.purplemammoth.apps.yoelijopy.ui.HomeFragment">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/Widget.CardTitle.WithActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/Widget.CardTitleText.Big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Card Title" />
            </LinearLayout>

            <LinearLayout
                style="@style/Widget.CardContent.WithActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Card description text, generally a short description" />

            </LinearLayout>

            <LinearLayout
                style="@style/Widget.CardActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <Button
                    style="@style/Widget.CardActionButton"
                    android:text="Other action" />

                <Button
                    style="@style/Widget.CardActionButton.Primary"
                    android:text="Action" />
            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>

</FrameLayout>
