<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="py.com.purpleapps.yovotopy.ui.ConsultaPadronFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:visibility="visible">

            <android.support.v7.widget.CardView
                android:id="@+id/datos_personales_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        style="@style/Widget.CardTitle.WithActions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/Widget.CardTitleText.Big"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Datos Personales" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/Widget.CardContent.WithActions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:shrinkColumns="1">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:minHeight="48dp"
                                android:overScrollMode="ifContentScrolls">

                                <TextView
                                    style="@style/Widget.CardSupportingText.Bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Nombres:" />

                                <TextView
                                    android:id="@+id/nombre_persona_text"
                                    style="@style/Widget.CardSupportingText"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="@dimen/default_padding"
                                    android:paddingRight="@dimen/default_padding"
                                    android:text="Fulano de tal" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:minHeight="48dp"
                                android:overScrollMode="ifContentScrolls">

                                <TextView
                                    style="@style/Widget.CardSupportingText.Bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Apellidos:" />

                                <TextView
                                    android:id="@+id/apellido_persona_text"
                                    style="@style/Widget.CardSupportingText"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="@dimen/default_padding"
                                    android:paddingRight="@dimen/default_padding"
                                    android:text="Fulano de tal" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:minHeight="48dp">

                                <TextView
                                    style="@style/Widget.CardSupportingText.Bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Sexo:" />

                                <TextView
                                    android:id="@+id/sexo_persona_text"
                                    style="@style/Widget.CardSupportingText"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="@dimen/default_padding"
                                    android:paddingRight="@dimen/default_padding"
                                    android:text="Masculino" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:minHeight="48dp">

                                <TextView
                                    style="@style/Widget.CardSupportingText.Bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Nacionalidad:" />

                                <TextView
                                    android:id="@+id/nacionalidad_persona_text"
                                    style="@style/Widget.CardSupportingText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="@dimen/default_padding"
                                    android:paddingRight="@dimen/default_padding"
                                    android:text="Paraguaya" />
                            </TableRow>
                        </TableLayout>

                    </LinearLayout>

                    <LinearLayout
                        style="@style/Widget.CardActions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">

                        <Button
                            android:id="@+id/guardar_button"
                            style="@style/Widget.CardActionButton.Primary"
                            android:text="Guardar como predeterminado" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/local_votacion_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_margin"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        style="@style/Widget.CardTitle.WithActions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/Widget.CardTitleText.Big"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Local de votaciÃ³n" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/map_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        style="@style/Widget.CardContent.WithActions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:shrinkColumns="1">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:minHeight="48dp">

                                <TextView
                                    style="@style/Widget.CardSupportingText.Bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Nombre:" />

                                <TextView
                                    android:id="@+id/nombre_local_text"
                                    style="@style/Widget.CardSupportingText"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="@dimen/default_padding"
                                    android:paddingRight="@dimen/default_padding"
                                    android:text="Escuela XXX" />
                            </TableRow>


                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:minHeight="48dp">

                                <TextView
                                    style="@style/Widget.CardSupportingText.Bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="DirecciÃ³n:" />

                                <TextView
                                    android:id="@+id/direccion_local_text"
                                    style="@style/Widget.CardSupportingText"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="@dimen/default_padding"
                                    android:paddingRight="@dimen/default_padding"
                                    android:text="En tal lugar" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:minHeight="48dp">

                                <TextView
                                    style="@style/Widget.CardSupportingText.Bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Departamento:" />

                                <TextView
                                    android:id="@+id/departamento_text"
                                    style="@style/Widget.CardSupportingText"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="@dimen/default_padding"
                                    android:paddingRight="@dimen/default_padding"
                                    android:text="xxx" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:minHeight="48dp">

                                <TextView
                                    style="@style/Widget.CardSupportingText.Bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Zona:" />

                                <TextView
                                    android:id="@+id/zona_text"
                                    style="@style/Widget.CardSupportingText"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="@dimen/default_padding"
                                    android:paddingRight="@dimen/default_padding"
                                    android:text="xxx" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:minHeight="48dp">

                                <TextView
                                    style="@style/Widget.CardSupportingText.Bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Distrito:" />

                                <TextView
                                    android:id="@+id/distrito_text"
                                    style="@style/Widget.CardSupportingText"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="@dimen/default_padding"
                                    android:paddingRight="@dimen/default_padding"
                                    android:text="xxx" />
                            </TableRow>
                        </TableLayout>

                    </LinearLayout>

                    <LinearLayout
                        style="@style/Widget.CardActions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">

                        <Button
                            android:id="@+id/ver_mapa_button"
                            style="@style/Widget.CardActionButton.Primary"
                            android:text="Ver mapa" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/datos_votacion_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_margin"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        style="@style/Widget.CardTitle.WithActions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/Widget.CardTitleText.Big"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Datos de votaciÃ³n" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/Widget.CardContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:shrinkColumns="1">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:minHeight="48dp">

                                <TextView
                                    style="@style/Widget.CardSupportingText.Bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Mesa:" />

                                <TextView
                                    android:id="@+id/mesa_text"
                                    style="@style/Widget.CardSupportingText"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="@dimen/default_padding"
                                    android:paddingRight="@dimen/default_padding"
                                    android:text="Fulano de tal" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:minHeight="48dp">

                                <TextView
                                    style="@style/Widget.CardSupportingText.Bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Orden:" />

                                <TextView
                                    android:id="@+id/orden_text"
                                    style="@style/Widget.CardSupportingText"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="@dimen/default_padding"
                                    android:paddingRight="@dimen/default_padding"
                                    android:text="Masculino" />
                            </TableRow>

                            <TableRow
                                android:id="@+id/tipo_voto_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:minHeight="48dp"
                                android:visibility="gone">

                                <TextView
                                    style="@style/Widget.CardSupportingText.Bold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Lugar de votaciÃ³n:" />

                                <TextView
                                    android:id="@+id/tipo_voto_text"
                                    style="@style/Widget.CardSupportingText"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="@dimen/default_padding"
                                    android:paddingRight="@dimen/default_padding"
                                    android:text="Masculino" />
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.v4.widget.SwipeRefreshLayout>