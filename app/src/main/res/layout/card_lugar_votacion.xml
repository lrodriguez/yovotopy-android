<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/local_votacion_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_margin"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="@style/Widget.CardTitle.WithActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/Widget.CardTitleText.Big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Local de votación" />
        </LinearLayout>

        <ImageView
            android:id="@+id/map_image_view"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <LinearLayout
            style="@style/Widget.CardContent.WithActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:minHeight="48dp">

                    <TextView
                        style="@style/Widget.CardSupportingText.Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Nombre:" />

                    <TextView
                        android:id="@+id/nombre_local_text"
                        style="@style/Widget.CardSupportingText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/default_padding"
                        android:paddingRight="@dimen/default_padding"
                        android:text="Escuela XXX" />
                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:minHeight="48dp">

                    <TextView
                        style="@style/Widget.CardSupportingText.Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Dirección:" />

                    <TextView
                        android:id="@+id/direccion_local_text"
                        style="@style/Widget.CardSupportingText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/default_padding"
                        android:paddingRight="@dimen/default_padding"
                        android:text="En tal lugar" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:minHeight="48dp">

                    <TextView
                        style="@style/Widget.CardSupportingText.Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Departamento:" />

                    <TextView
                        android:id="@+id/departamento_text"
                        style="@style/Widget.CardSupportingText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/default_padding"
                        android:paddingRight="@dimen/default_padding"
                        android:text="xxx" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:minHeight="48dp">

                    <TextView
                        style="@style/Widget.CardSupportingText.Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Zona:" />

                    <TextView
                        android:id="@+id/zona_text"
                        style="@style/Widget.CardSupportingText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/default_padding"
                        android:paddingRight="@dimen/default_padding"
                        android:text="xxx" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:minHeight="48dp">

                    <TextView
                        style="@style/Widget.CardSupportingText.Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Distrito:" />

                    <TextView
                        android:id="@+id/distrito_text"
                        style="@style/Widget.CardSupportingText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/default_padding"
                        android:paddingRight="@dimen/default_padding"
                        android:text="xxx" />
                </TableRow>
            </TableLayout>

        </LinearLayout>

        <LinearLayout
            style="@style/Widget.CardActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <Button
                android:id="@+id/ver_mapa_button"
                style="@style/Widget.CardActionButton.Primary"
                android:text="Ver mapa" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>