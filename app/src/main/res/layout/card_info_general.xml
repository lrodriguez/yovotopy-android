<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/proximas_elecciones_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="@style/Widget.CardTitle.WithActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/Widget.CardTitleText.Big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PrÃ³ximas Elecciones" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:adjustViewBounds="true"
            android:background="@color/materialLightPrimaryColor"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:src="@drawable/logo_municipales_2015" />

        <LinearLayout
            style="@style/Widget.CardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Faltan: " />

            <TextView
                android:id="@+id/countdown_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/default_padding"
                android:text="5 d, 5 hs, 5min"
                android:textSize="24dp" />

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>